{
  "ci": {
    "collect": {
      "numberOfRuns": 2,
      "startServerCommand": "pnpm --filter @pulse/frontend build && pnpm --filter @pulse/frontend start -- -p 3000",
      "startServerReadyPattern": "Ready",
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/login"
      ],
      "settings": {
        "preset": "desktop"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": [
          "error",
          { "minScore": 0.9 }
        ],
        "categories:accessibility": [
          "error",
          { "minScore": 0.9 }
        ],
        "cumulative-layout-shift": [
          "error",
          { "maxNumericValue": 0.1 }
        ],
        "largest-contentful-paint": [
          "warn",
          { "maxNumericValue": 3000 }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
