{
  "name": "@pulse/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/main.js",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "test": "jest --runInBand",
    "test:ci": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "sh -c 'set -a; . ../../.env; set +a; prisma generate'",
    "prisma:migrate": "sh -c 'set -a; . ../../.env; set +a; prisma migrate dev'",
    "prisma:migrate:deploy": "sh -c 'set -a; . ../../.env; set +a; prisma migrate deploy'"
  },
  "dependencies": {
    "@pulse/shared": "workspace:*",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/throttler": "^6.2.1",
    "@prisma/client": "^6.3.1",
    "@trpc/server": "^11.0.0",
    "bullmq": "^5.40.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "eslint": "^9.20.0",
    "jest": "^29.7.0",
    "prisma": "^6.3.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
